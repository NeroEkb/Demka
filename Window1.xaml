<Window x:Class="Demka.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demka"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Вставьте токен" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10"/>
        <TextBox x:Name="TokenTextBox" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350" Height="35"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button x:Name="AddToken" Content="Добавить" Margin="30" Click="AddToken_Click"/>
            <Button x:Name="Cancel" Content="Отмена" Margin="200 30 30 30" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
