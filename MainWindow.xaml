<Window x:Class="Demka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demka"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="NameText" Text="{Binding Name,TargetNullValue=Null,FallbackValue=Name}" Margin="5"/>
            <TextBlock x:Name="NumberText" Text="{Binding Number,TargetNullValue=Null,FallbackValue=Number}" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="CurrencyText" Text="{Binding Currency,TargetNullValue=Null,FallbackValue=Currnecy}" Margin="5"/>
                <TextBlock x:Name="AmountText" Text="{Binding Amount,TargetNullValue=Null,FallbackValue=Amount}" Margin="5"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
